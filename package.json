{
  "name": "motocross-small-files",
  "version": "1.0.0",
  "description": "Motocross Small Files",
  "main": "src/index.ts",
  "repository": "git@github.com:lukaselmer/motocross-small-files.git",
  "author": "Lukas Elmer <lukas.elmer@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rm dist/bundle.js",
    "start": "concurrently yarn:watch:parcel yarn:watch:tsc yarn:watch:prettier yarn:watch:tslint",
    "watch:parcel": "parcel src/index.html",
    "watch:tsc": "tsc -w --pretty --project .",
    "watch:prettier": "onchange '**/*' --exclude-path .prettierignore -- npx prettier --write {{changed}}",
    "watch:tslint": "onchange '**/*.ts' '**/*.tsx' -- yarn tslint",
    "build": "parcel build src/index.html",
    "download-images": "TS_NODE_COMPILER_OPTIONS=\"{\\\"module\\\":\\\"commonjs\\\"}\" ts-node src/data/download-images.ts",
    "deploy": "firebase deploy",
    "pre-commit": "yarn collapse-objects && yarn lint-parallel",
    "lint": "yarn tslint && yarn prettier && yarn tsc",
    "lint-parallel": "concurrently yarn:tslint yarn:prettier yarn:tsc",
    "collapse-objects": "yarn eslint-raw && yarn prettier",
    "eslint-raw": "eslint --ext .ts,.tsx --parser @typescript-eslint/parser --parser-options=ecmaVersion:2020,ecmaFeatures:{},sourceType:module --rule 'object-curly-newline: [2, never]' --no-eslintrc --fix ./src",
    "tslint": "tslint --fix -c tslint.json 'src/**/*.ts' 'src/**/*.tsx'",
    "prettier": "prettier --write '**/*'",
    "tsc": "tsc --project ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-brands-svg-icons": "^5.11.2",
    "@fortawesome/free-regular-svg-icons": "^5.11.2",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "@fortawesome/react-fontawesome": "^0.1.6",
    "date-fns": "^2.5.1",
    "lodash": "^4.17.15",
    "react": "^16.10.0",
    "react-dom": "^16.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-react": "^7.0.0",
    "@types/lodash": "^4.14.144",
    "@types/node": "^12.11.1",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.1",
    "@types/react-vertical-timeline-component": "^2.3.1",
    "@typescript-eslint/parser": "^2.4.0",
    "concurrently": "^5.0.0",
    "eslint": "^6.5.1",
    "firebase-tools": "^7.6.1",
    "husky": "^3.0.9",
    "image-size": "^0.8.3",
    "onchange": "^6.1.0",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.18.2",
    "react-visibility-sensor": "^5.1.1",
    "sass": "^1.23.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.1.0",
    "typescript": "^3.6.4"
  }
}
